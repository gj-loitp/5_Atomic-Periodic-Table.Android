<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rCard"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/margin_space_card"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/margin_space_card"
    android:background="@drawable/shape_toast_card"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:focusable="true"
    tools:ignore="PrivateResource">

    <FrameLayout
        android:id="@+id/elemntCard"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin"
        android:background="@drawable/shape_toast"
        android:backgroundTint="?attr/colorPrimary">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary" />
    </FrameLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvVoltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="18dp"
        android:textColor="?attr/colorTertiary" />
</FrameLayout>
