                    android:alpha="0.11"
                    android:background="@drawable/shape_half_toast"
                    android:backgroundTint="?attr/colorPrimary" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDragIcon"
                    android:layout_width="36dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_margin="18dp"
                    android:alpha="0.85"
                    android:background="@drawable/shape_toast"
                    android:backgroundTint="?attr/colorOnSecondaryContainer"
                    android:elevation="4dp"
                    android:gravity="center_horizontal"
                    android:textAlignment="center" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDragIcon2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="42dp"
                    android:alpha="0.85"
                    android:background="?attr/colorOnSecondaryContainer"
                    android:elevation="1dp" />

            </FrameLayout>

