            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/solubilityBtn"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?attr/colorSurface"
                    android:backgroundTint="?attr/colorSurface"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_menu"
                    android:drawablePadding="18dp"
                    android:drawableTint="?attr/colorOnSecondaryContainer"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_d_ripple"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:text="@string/tables"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textColorHighlight="?attr/colorOnSecondaryContainer"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:alpha="0.11"
                    android:background="?attr/colorPrimary"
                    android:elevation="0dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:visibility="gone"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/electronegativity_btn"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?attr/colorSecondaryContainer"
                    android:backgroundTint="?attr/colorSecondaryContainer"
                    android:clickable="true"
                    android:drawableStart="@drawable/vector_fav_electronegativity"
                    android:drawablePadding="18dp"
                    android:drawableTint="?attr/colorOnSecondaryContainer"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_d_ripple"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:shadowColor="?attr/colorAccent"
                    android:text="@string/electronegativity_table"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textColorHighlight="?attr/colorOnSecondaryContainer"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:alpha="0.11"
                    android:background="?attr/colorPrimary"
                    android:elevation="0dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/isotopesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?attr/colorSurface"
                    android:backgroundTint="?attr/colorSurface"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_isotopes"
                    android:drawablePadding="18dp"
                    android:drawableTint="?attr/colorOnSecondaryContainer"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_d_ripple"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:text="Isotopes"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textColorHighlight="?attr/colorOnSecondaryContainer"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:alpha="0.11"
                    android:background="?attr/colorPrimary"
                    android:elevation="0dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="54dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/dictionaryBtn"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="?attr/colorSurface"
                    android:backgroundTint="?attr/colorSurface"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_dictionary"
                    android:drawablePadding="18dp"
                    android:drawableTint="?attr/colorOnSecondaryContainer"
                    android:elevation="0dp"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_d_ripple"
                    android:gravity="center_vertical"
                    android:padding="18dp"
                    android:text="Dictionary"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textColorHighlight="?attr/colorOnSecondaryContainer"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:alpha="0.11"
                    android:background="?attr/colorPrimary"
                    android:elevation="0dp" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/space5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorOnSecondaryContainer" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorSurface">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.11"
                    android:background="?attr/colorPrimary"
                    android:elevation="1dp" />

                <LinearLayout
                    android:id="@+id/llSocialmediaLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="0dp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_rate_review_24"
                        android:drawableTint="?attr/colorOnSecondaryContainer"
                        android:gravity="center"
                        android:text="@string/rate_app"
                        android:textColor="?attr/colorOnSecondaryContainer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btShare"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_ios_share_24"
                        android:drawableTint="?attr/colorOnSecondaryContainer"
                        android:gravity="center"
                        android:text="@string/share_app"
                        android:textColor="?attr/colorOnSecondaryContainer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_favorite_border_24"
                        android:drawableTint="?attr/colorOnSecondaryContainer"
                        android:gravity="center"
                        android:text="@string/more_app"
                        android:textColor="?attr/colorOnSecondaryContainer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btPolicy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_policy_24"
                        android:drawableTint="?attr/colorOnSecondaryContainer"
                        android:gravity="center"
                        android:text="@string/policy"
                        android:textColor="?attr/colorOnSecondaryContainer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btGithub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/baseline_code_24"
                        android:drawableTint="?attr/colorOnSecondaryContainer"
                        android:gravity="center"
                        android:text="@string/github"
                        android:textColor="?attr/colorOnSecondaryContainer" />
                </LinearLayout>

            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

