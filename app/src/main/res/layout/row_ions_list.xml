<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/ionCard"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_toast_card"
        android:backgroundTint="?attr/colorSurfaceVariant"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="PrivateResource">

        <FrameLayout
            android:id="@+id/ionCount"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:background="@drawable/shape_toast"
            android:backgroundTint="?attr/colorPrimary">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvShortD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="?attr/colorOnPrimary" />
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNameD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvIonization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="18dp"
            android:alpha="0.8"
            android:drawableEnd="@drawable/outline_chevron_right_24"
            android:drawablePadding="4dp"
            android:drawableTint="?attr/colorTertiary"
            android:elegantTextHeight="true"
            android:textAlignment="center"
            android:textColor="?attr/colorTertiary"
            tools:ignore="RtlCompat" />

    </FrameLayout>

</FrameLayout>
