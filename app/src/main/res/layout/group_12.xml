            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:alpha="0.9"
            android:elevation="24dp"
            android:gravity="bottom|center_horizontal"
            android:text="Zinc"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="10sp" />
