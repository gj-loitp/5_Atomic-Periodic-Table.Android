            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="24dp"
            android:gravity="center"
            android:text="Zn"
            android:textColor="?attr/actionMenuTextColor"
            android:textSize="24sp" />

        <TextView
