<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        android:id="@+id/viewSub"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/backgroundColor">

    <FrameLayout
            android:id="@+id/commonTitleBackTab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar"
            android:alpha="1"
            android:elevation="1dp"
            android:background="?attr/colorSurface"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/commonTitleTableColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:alpha="0.11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/titleBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar">

                    <ImageButton
                        android:id="@+id/backBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center_vertical"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_whit" />

                    <TextView
                        android:id="@+id/tablesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/title_bar"
                        android:layout_marginStart="70dp"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:alpha="0.9"
                        android:paddingEnd="0dp"
                        android:text="@string/activity_table_title"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

    <ScrollView
        android:id="@+id/tableScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tablesTitleDownstate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="28dp"
            android:text="@string/activity_table_title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="32sp"
            android:textStyle="normal" />

        <FrameLayout
            android:id="@+id/phTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_ph"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_ph_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/phButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/eleTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_electrochemical"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_electrochemical_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/eleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/equTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_equations"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_equations_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/equButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/ionTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_ionization"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_ionization_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/ionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/nucTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_nuclide"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginStart="@dimen/margin"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="start"
                    android:text="Beta"
                    android:alpha="0.8"
                    android:textColor="?attr/colorOnTertiary"
                    android:textSize="13sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorTertiary"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_nuclide_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/nucButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/solTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin_space_card"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginBottom="@dimen/margin_space_card"
            android:background="@drawable/toast_card"
            android:backgroundTint="?attr/colorSurfaceVariant"
            android:clickable="true"
            android:elevation="0dp"
            android:focusable="true"
            android:foreground="@drawable/toast_card_ripple">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_solubility"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_solubility_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/solButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_gravity="end"
                    android:text="@string/open_table_button"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="14sp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="@drawable/toast_card_ripple"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    </ScrollView>

</FrameLayout>
