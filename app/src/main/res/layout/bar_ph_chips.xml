<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/chip_bar_ph"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bromothymolBlueBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/chip_outline"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/chip_ripple"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/activity_ph_bromothymol_blue"
                android:textAllCaps="false"
                android:textColor="?attr/actionMenuTextColor" />

            <Button
                android:id="@+id/methylOrangeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/chip"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/chip_ripple"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/activity_ph_methyl_orange"
                android:textAllCaps="false"
                android:textColor="?attr/actionMenuTextColor" />

            <Button
                android:id="@+id/congoRedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/chip"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/chip_ripple"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/activity_ph_congo_red"
                android:textAllCaps="false"
                android:textColor="?attr/actionMenuTextColor" />

            <Button
                android:id="@+id/phenolphthalein_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/chip"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/chip_ripple"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/activity_ph_phenolphthalein"
                android:textAllCaps="false"
                android:textColor="?attr/actionMenuTextColor" />

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>