<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/viewLic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <FrameLayout
            android:id="@+id/commonTitleBackLic"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorSurface"
            android:elevation="1dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/commonTitleBackLicColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.11"
                android:background="?attr/colorPrimary"
                android:elevation="1dp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/titleBox"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageButton
                        android:id="@+id/backBtnD"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:elevation="8dp"
                        android:rotation="180"
                        android:src="@drawable/ic_arrow_back_whit"
                        app:tint="?attr/colorOnPrimaryContainer"
                        tools:ignore="PrivateResource" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/licenseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_marginStart="70dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/license_title"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:ignore="PrivateResource" />

                </FrameLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>

        <ScrollView
            android:id="@+id/licenseScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/licenses_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/licenseTitleDownstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="28dp"
                    android:text="@string/license_title"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="32sp"
                    android:textStyle="normal" />

                <FrameLayout
                    android:id="@+id/lWikiBtn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space_card"
                    android:background="@drawable/shape_toast"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    tools:ignore="PrivateResource">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginEnd="@dimen/margin"
                        android:text="@string/wikipedia_commons"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/lSothreeBtn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space_card"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space_card"
                    android:background="@drawable/shape_toast"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    tools:ignore="PrivateResource">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginEnd="@dimen/margin"
                        android:text="@string/sothree_android_sliding_up_panel"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                </FrameLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

        <include
            android:id="@+id/lInc"
            layout="@layout/license_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
