<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/viewf"
    android:fitsSystemWindows="true"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/commonTitleBackFav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="1dp"
        android:background="?attr/colorSurface"
        android:gravity="center|center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/commonTitleBackFavColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:alpha="0.11"/>

        <LinearLayout
            android:gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/titleBox"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ImageButton
                    android:id="@+id/backBtnFav"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:rotation="180"
                    android:elevation="2dp"
                    app:tint="?attr/colorOnSecondaryContainer"
                    android:src="@drawable/ic_arrow_back_whit" />

                <TextView
                    android:id="@+id/favoriteSetTitle"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="70dp"
                    android:alpha="0.9"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/favorite_settings_title"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/favSetScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favoriteSetTitleDownstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="28dp"
                android:text="@string/favorite_settings_title"
                android:textColor="?attr/colorOnSurface"
                android:textSize="32sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/general_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/margin_space_card"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:paddingStart="@dimen/margin"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="@string/favorite_settings_general"
                android:textColor="?attr/colorPrimary"
                android:textStyle="normal|normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/molarMassCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:buttonTintMode="src_in"
                    android:checked="true"
                    android:drawableEnd="@drawable/ic_weight_outline"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Molar Mass"
                    android:textColor="?attr/colorOnSecondaryContainer" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/phaseCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="true"
                    android:drawableEnd="@drawable/vector_fav_gas"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show STP Phase"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/electronegativity_check"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="true"
                    android:drawableEnd="@drawable/vector_fav_electronegativity"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Electronegativity"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/densityCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_weight_outline"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Density"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/general_header2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:paddingStart="@dimen/margin"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="@string/favorite_settings_temperatures"
                android:textColor="?attr/colorAccent"
                android:textStyle="normal|normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/kelvinBtn"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_chip_outline"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/riple_chip_ripple"
                    android:text="Kelvin"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/celsiusBtn"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_margin="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/toast_outline"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/shape_chip_outline"
                    android:text="Celsius"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/fahrenheitbtn"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginBottom="9dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_chip_outline"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/riple_chip_ripple"
                    android:text="Fahrenheit"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/boilingCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_temperature"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Boiling Point"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:buttonTint="?attr/colorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/meltingCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_temperature"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Melting Point"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                
                android:paddingStart="@dimen/margin"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="@string/favorite_settings_atomic_properties"
                android:textColor="?attr/colorAccent"
                android:textStyle="normal|normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/atomicRadiusEmpiricalCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_radius"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Atomic Radius (Empirical)"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/atomicRadiusCalculatedCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_radius"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Atomic Radius (Calculated)"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/covalentRadiusCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_radius"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Covalent Radius"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/vanDerWaalsRadiusCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_radius"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Van Der Waals Radius"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/general_header3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:paddingStart="@dimen/margin"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:text="@string/favorite_settings_thermodynamics"
                android:textColor="?attr/colorAccent"
                android:textStyle="normal|normal" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/fusionHeatCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_heat"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Fusion Heat"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/specificHeatCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:buttonTint="?attr/colorPrimary"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_heat"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Specific Heat Capacity"
                    android:textColor="?attr/colorOnSecondaryContainer" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="?attr/rippleColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/ripple_d_ripple">

                <CheckBox
                    android:id="@+id/vaporizationHeatCheck"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginEnd="@dimen/margin"
                    android:checked="false"
                    android:drawableEnd="@drawable/ic_vaporization"
                    android:drawablePadding="9dp"
                    android:layoutDirection="rtl"
                    android:text="Show Vaporization Heat"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:buttonTint="?attr/colorPrimary" />
            </FrameLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>