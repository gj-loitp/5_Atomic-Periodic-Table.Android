<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_nuclide_frame"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@drawable/shape_toast_nuclide"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:elevation="0dp"
    android:focusable="true"
    android:foreground="@drawable/ripple_bkg"
    tools:ignore="PrivateResource">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvnNuclideElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNuclideNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="9dp"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="5sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNuclideDecay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="4dp"
        android:textColor="?attr/actionMenuTextColor"
        android:textSize="6sp" />

</FrameLayout>
